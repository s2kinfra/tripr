<script>
    $(document).ready(function(){
                      $('#()searchbox').selectize({
                                                valueField: 'url',
                                                labelField: 'name',
                                                searchField: ['name'],
                                                maxOptions: 10,
                                                options: [],
                                                create: false,
                                                render: {
                                                option: function(item, escape) {
                                                  switch (item.objType){
                                                  case "users":
                                                      return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small><i>(@'+ escape(item.slug)+')</i></small></div>';
                                                      break;
                                                  case "trips":
                                                      return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small>('+ escape(item.slug)+')</small></div>';
                                                      break;
                                                  default:
                                                      return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small>('+ escape(item.slug)+')</small></div>';
                                                  }
                                                }
                                                },
                                                optgroups: [
                                                            {value: 'users', label: 'Users'},
                                                            {value: 'trips', label: 'Trips'}
                                                            ],
                                                optgroupField: 'objType',
                                                optgroupOrder: ['users','trips'],
                                                load: function(query, callback) {
                                                if (!query.length) return callback();
                                                $.ajax({
                                                       url: 'http://localhost:8080/search/all/'+query,
                                                       type: 'GET',
                                                       dataType: 'json',
                                                       error: function() {
                                                       callback();
                                                       },
                                                       success: function(res) {
                                                       callback(res.data);
                                                       }
                                                       });
                                                },
                                                onChange: function(){
                                                window.location = this.items[0];
                                                }
                                                });
                      });
                      
                      $('#()NavNotifications').selectize({
                                                  valueField: 'url',
                                                  labelField: 'name',
                                                  searchField: ['name'],
                                                  maxOptions: 10,
                                                  options: [],
                                                  create: false,
                                                  render: {
                                                  option: function(item, escape) {
                                                  switch (item.objType){
                                                  case "users":
                                                  return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small><i>(@'+ escape(item.slug)+')</i></small></div>';
                                                  break;
                                                  case "trips":
                                                  return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small>('+ escape(item.slug)+')</small></div>';
                                                  break;
                                                  default:
                                                  return '<div><img class="searchIcon" src="'+ item.icon +'">' +escape(item.name)+' <small>('+ escape(item.slug)+')</small></div>';
                                                  }
                                                  }
                                                  },
                                                  optgroups: [
                                                              {value: 'users', label: 'Users'},
                                                              {value: 'trips', label: 'Trips'}
                                                              ],
                                                  optgroupField: 'objType',
                                                  optgroupOrder: ['users','trips'],
                                                  load: function(query, callback) {
                                                  if (!query.length) return callback();
                                                  $.ajax({
                                                         url: 'http://localhost:8080/search/all/'+query,
                                                         type: 'GET',
                                                         dataType: 'json',
                                                         error: function() {
                                                         callback();
                                                         },
                                                         success: function(res) {
                                                         callback(res.data);
                                                         }
                                                         });
                                                  },
                                                  onChange: function(){
                                                  window.location = this.items[0];
                                                  }
                                                  });
    </script>

